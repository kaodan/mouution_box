<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.PointFileExtract">

    <View
        android:id="@+id/statusSplitView"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <com.hjq.bar.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="指定文件提取" />

    <TextView
        android:id="@+id/extract_out_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:text="路径" />

    <www.linwg.org.lib.LCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:id="@+id/file_type"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/app_name" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ss.zip"
                android:textColor="@color/colorStress"
                android:textSize="16sp" />
        </LinearLayout>
    </www.linwg.org.lib.LCardView>

    <LinearLayout
        android:id="@+id/res_extract"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:gravity="center">

        <TextView
            android:id="@+id/res_extract_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提取"
            android:textColor="@color/colorStress"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>